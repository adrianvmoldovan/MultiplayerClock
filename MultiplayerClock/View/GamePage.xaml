<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiplayerClock.GamePage"
             Title="GamePage">
    <ScrollView>
        <Grid
            x:Name="MainGameGrid"
            RowDefinitions =".7*, .3*"> 
            <Grid x:Name="ButtonContainer"
                Grid.Row="0">
                <Label x:Name="ResultLabel" Text="Tap the triangle!" FontSize="18" HorizontalOptions="Center" />
                <!-- Dynamically added triangle buttons will go here -->
            </Grid>
            <Grid
                Grid.Row="1"
                ColumnDefinitions=".3*, .7*"
                RowSpacing       ="30"
                Padding          ="30">
                <Button
                    Grid.Column="0"
                    Text="⏪"
                    FontSize="45"
                    Margin="5">
                
                </Button>
                <Button
                    Grid.Column="1"
                    Text="⏩"
                    FontSize="45"
                    Margin="5">

                </Button>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>